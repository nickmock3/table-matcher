{
  "name": "table-matcher",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:cf": "bun run build:cf && opennextjs-cloudflare preview",
    "build": "next build",
    "build:cf": "rm -rf .open-next && opennextjs-cloudflare build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "cf:typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run db:migrate:dev",
    "db:migrate:dev": "wrangler d1 migrations apply table-matcher-dev --env dev --config wrangler.jsonc",
    "db:migrate:prod": "wrangler d1 migrations apply table-matcher-prod --env prod --config wrangler.jsonc",
    "db:migrate:local": "wrangler d1 migrations apply table-matcher-dev --local --env dev --config wrangler.jsonc",
    "db:seed:local": "wrangler d1 execute table-matcher-dev --local --env dev --config wrangler.jsonc --file seeds/seed.local.sql",
    "deploy:dev": "bun run build:cf && wrangler deploy --env dev --config wrangler.jsonc",
    "deploy:demo": "bun run build:cf && wrangler deploy --env demo --config wrangler.jsonc",
    "deploy:prod": "bun run build:cf && wrangler deploy --env prod --config wrangler.jsonc"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.16.3",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "embla-carousel-react": "^8.6.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.31.9",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "jsdom": "^28.0.0",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "wrangler": "^4.63.0"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
